<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="KeypairSorting.Views.SorterEvalsGridControl"
	x:Name="UserControl"
	d:DesignWidth="127" d:DesignHeight="287.08">

	<Grid x:Name="LayoutRoot">
		<DockPanel LastChildFill="True">
			<WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top">
                
                <Button Command="{Binding CopyGridCommand}" Content="Copy" 
                        Style="{DynamicResource PlainButtonStyle}"/>
                
            </WrapPanel>

			<DataGrid x:Name="dataGrid" VerticalScrollBarVisibility="Auto"
				    DockPanel.Dock="Bottom"
				    ItemsSource="{Binding SorterOnSwitchableGroupVms}"/>

		</DockPanel>
	</Grid>
</UserControl>